{
    "env": {
        "browser": true,
        "jest": true,
        "es6": true
    },
    "ignorePatterns": [
        "postcss.config.js",
        "tailwind.config.css",
        "node_modules"
    ],
    "extends": [
        "plugin:react/recommended",
        "standard"
        // "eslint:all",
        // "plugin:react/all"
    ],
    "settings": {
        "react": {
            "version": "16.11"
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": "warn",
        "no-unused-vars": "warn",
        "no-extra-semi": "warn",
        "no-eval": "error",
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    }
}